{
    "name": "gt-pos",
    "version": "1.0.0",
    "private": true,
    "main": "main.js",
    "scripts": {
        "start:electron": "npm run copy-dist && electron .",
        "clean-dist": "rimraf ./pos/dist",
        "copy-dist": "npm run clean-dist && copyfiles -u 2 \"../pos/dist/**/*\" \"./pos\"",
        "build-win": "npm run copy-dist && electron-builder",
        "dev": "concurrently \"npm start\" \"npm run electron\""
    },
    "devDependencies": {
        "concurrently": "^9.1.2",
        "copyfiles": "^2.4.1",
        "electron": "37.2.3",
        "electron-builder": "^26.0.12",
        "rimraf": "^6.0.1",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.ethicsinfotech.gtpos",
        "files": [
            "web/dist/**/*",
            "**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "icon": "build/icon.ico",
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        },
        "publish": null
    },
    "dependencies": {
        "axios": "^1.10.0",
        "node-machine-id": "^1.1.12"
    }
}
